@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div class="jumbotron bg-transparent">
    @{
        var breadcrumbModel = new string[] { "HOW TO", Localizer["경매약관"].Value, ViewBag.CodeName };
    }
    <partial name="_Partial/_Breadcrumb" model="breadcrumbModel"/>
    <div class="inner h-px-40">
    </div>
</div>

<div class="container m-b-20 p-b-20">
    <div class="row">
        <div class="col-lg-12">
            <div class="card card-default">
                <div id="content-body" class="card-body">
                    @Html.Raw(ViewBag.Content)
                </div>
                <div class="condition_print">
                    <button class="condition_print_btn" onclick="$.commonUtils.print('@Localizer["경매약관"] - @ViewBag.CodeName', $('#content-body').html())">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-printer" viewBox="0 0 16 16">
                            <path d="M2.5 8a.5.5 0 1 0 0-1 .5.5 0 0 0 0 1z" />
                            <path d="M5 1a2 2 0 0 0-2 2v2H2a2 2 0 0 0-2 2v3a2 2 0 0 0 2 2h1v1a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2v-1h1a2 2 0 0 0 2-2V7a2 2 0 0 0-2-2h-1V3a2 2 0 0 0-2-2H5zM4 3a1 1 0 0 1 1-1h6a1 1 0 0 1 1 1v2H4V3zm1 5a2 2 0 0 0-2 2v1H2a1 1 0 0 1-1-1V7a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1v3a1 1 0 0 1-1 1h-1v-1a2 2 0 0 0-2-2H5zm7 2v3a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1v-3a1 1 0 0 1 1-1h6a1 1 0 0 1 1 1z" />
                        </svg>
                        @Localizer["프린트"]
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
