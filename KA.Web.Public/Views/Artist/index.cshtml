            'use strict'


            class ModalDispaly {

                constructor(element) {
                    this.$element = document.querySelector(`#${element}`);
                    this.$body = document.querySelector('body');
                }

                elOpen = () => {
                    this.$element.classList.add("on");
                    this.$body.classList.add('scroll_lock');
                }

                elClose = () => {
                    this.$element.classList.remove("on");
                    this.$body.classList.remove('scroll_lock');
                }

            }

            let modal = new ModalDispaly('artist-modal');
            const artistList = document.querySelectorAll('.artist_list .list-box'),
