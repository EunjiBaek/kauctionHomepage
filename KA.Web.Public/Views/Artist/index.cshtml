                el.addEventListener('mouseenter', (el) => {
                    el.currentTarget.nextElementSibling.style.display = 'flex';
                });

                el.addEventListener('mouseleave', (el) => {
                    el.currentTarget.nextElementSibling.style.display = 'none';
                });
            });


            const resizeScrollEvent = () => {
                if (matchMedia("screen and (max-width: 768px)").matches) {
                    $.commonUtils.tabMenu($('.lang-li'), 'artist-tab');
                    $.commonUtils.tabMenu($('.lang-main-li'), 'artist-main-tab');
                } else {
                    document.querySelectorAll('.tab_cnt > div').forEach((el) => {
                        el.style.display = "block";
                    });
                }
            };


        
            function arrowScrollEvent (el, arrow) {
                this.name = 'active';
                this.$el = document.querySelector(`${el}`);
                this.$arrow = document.querySelector(`${arrow}`);

                this.gradientOpen = function() {
                    if (this.$el.scrollWidth > this.$el.clientWidth) {
                        this.addName();
                    } else {
                        this.removeName();   
                    }
                }

                this.scrollEvent = function () {
                    if (this.$el.scrollWidth - (this.$el.scrollLeft + this.$el.clientWidth) + 1 < 10) {
                        this.removeName();
                    } else {
                        this.addName();
                    }
                }
                

                this.addName = function () {
                    this.$arrow.classList.add(this.name);
                }

                this.removeName = function () {
                    this.$arrow.classList.remove(this.name)
                }
            }


            let element = new arrowScrollEvent('.artist-scroll-wrap > .tab_cnt', '.artist-scroll-wrap > .artist-tab-gradient');
            let elementbox = new arrowScrollEvent('.artist-scrollbox-scroll-wrap > .tab_cnt', '.artist-scrollbox-scroll-wrap > .artist-tab-gradient');

            element.gradientOpen();

            artistListScrollWrap.addEventListener('scroll', function(e){
                element.scrollEvent();
            });
            


            window.addEventListener('resize', resizeScrollEvent);
            window.addEventListener('scroll', () => { 
                let scroll = window.scrollY;
                const scrollBox = document.querySelector('.artist-scroll-box');
                if (scroll > 0) {
                    scrollBox.classList.add('on');
                    elementbox.gradientOpen();
                    artistListScrollBoxWrap.addEventListener('scroll', function(e){
                        elementbox.scrollEvent();
                    });
                } else {
                    scrollBox.classList.remove('on');
                }
            });


            artistLikeBtn.addEventListener('click', (e) => {
                let target = e.currentTarget;
                if (target.getAttribute('data-click') === "0") {
                    target.classList.add('on');
                    target.dataset.click = "1";
                } else {
                    target.classList.remove('on');
                    target.dataset.click = "0";
                }
            });

    </script>
