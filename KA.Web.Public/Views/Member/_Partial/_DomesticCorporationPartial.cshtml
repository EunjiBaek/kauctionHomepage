@using Microsoft.AspNetCore.Mvc.Localization
@model KA.Web.Public.ViewModels.Member.RegisterViewModel
@inject KA.Web.Public.Services.CommonService CommonService
@inject IViewLocalizer L
@{
    var countryList = ViewData["CountryList"] as IEnumerable<KA.Entities.Models.Common.CommonCode>;
}

<div class="card-header separator" id="authentication-3">
    <div class="card-title">
        <div class="form-check fs16 checkbox-circle primary m-b-0 form-check-choice">
            <input type="radio" class="card-input-element" name="check-authentication" id="check-authentication-3" value="003" data-toggle="collapse" href="#collapse-authentication-3" aria-expanded="false" aria-controls="collapse-authentication-3">
            <label for="check-authentication-3" class="fs-16 m-b-10">@L["국내법인고객"] <span class="text-primary"></span></label>
        </div>
        <a class="collapsed" data-toggle="collapse" href="#collapse-authentication-3" aria-expanded="false" aria-controls="collapse-authentication-3"></a>
    </div>
</div>
<div id="collapse-authentication-3" class="collapse" data-parent="#authentications" aria-labelledby="authentication-3">
    <div class="card-body">
        <div class="row" id="mobile-auth-3">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <p class="hint-text"><i class="far fa-exclamation-triangle fa-fw fs-14"></i> @L["본인인증 후 정보를 입력해 주시기 바랍니다."]</p>
                        <div class="row justify-content-center m-t-20">
                            <div class="col-lg-6 sm-m-b-10 md-m-b-10">
                                <button type="button" class="btn btn-cta btn-block btn-primary fs-14" onclick="$.joinUtils.openAuth(3, 'M');">
                                    <span class="authenticate center"><i class="far fa-mobile-alt fa-fw m-r-5"></i> @L["핸드폰 본인 인증"]</span>
                                </button>
                            </div>
                            <div class="col-lg-6">
                                <button type="button" class="btn btn-cta btn-block btn-primary fs-14" onclick="$.joinUtils.openAuth(3, 'C');">
                                    <span class="authenticate center"><i class="fal fa-credit-card fa-fw m-r-5"></i> @L["신용카드 본인 인증"]</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row m-b-10" style="right: 0px; left: 0px;">
            <i class="far fa-arrow-circle-right fa-fw fs-14"></i> @L["담당자 정보"]
        </div>
        <div class="row">
            <div class="col-lg-6 required">
                <div id="fg-id-3" class="form-group form-group-default required disabled">
                    <label>ID<span class="m-l-10 small-text hint-text">@L["영문/숫자 조합 5~12자리"]</span></label>
                    <input id="id-3" type="text" class="form-control" value="@Model.ID" onkeyup="$.joinUtils.checkID(this);" disabled data-msg="@L["아이디를 입력하세요."]">
                </div>
            </div>
            <div class="col-lg-6 required">
                <div id="fg-name-3" class="form-group form-group-default required disabled">
                    <label>@L["이름"]</label>
                    <input id="name-3" type="text" class="form-control" disabled data-msg="@L["이름을 입력하세요."]" value="@Model.Name">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 required">
                <div id="fg-birth-date-3" class="form-group form-group-default required disabled">
                    <label>@L["생년월일"]<span class="m-l-10 small-text hint-text">e.g. 2000-12-30</span></label>
                    <input id="birth-date-3" type="text" class="form-control form-birth" disabled data-msg="@L["생년월일을 입력하세요."]" value="@Model.BirthDate">
                </div>
            </div>
            <div class="col-lg-6 required">
                <div id="fg-sex-3" class="form-group form-group-default form-group-default-select2 required required2 disabled">
                    <label class="">@L["성별"]</label>
                    <select id="sex-3" class="full-width" data-placeholder="" data-init-plugin="select2" data-disable-search="true" disabled data-msg="@L["성별을 선택하세요."]">
                        <option></option>
                        <option value="F">@L["여자"]</option>
                        <option value="M">@L["남자"]</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 required">
                <div id="fg-email-3" class="form-group form-group-default required disabled">
                    <label>@L["이메일"]</label>
                    <input id="email-3" type="email" class="form-control" disabled data-msg="@L["이메일을 입력하세요."]" value="@Model.Email">
                </div>
            </div>
            <div class="col-lg-6 required">
                <div id="fg-mobile-3" class="form-group form-group-default required disabled">
                    <label>@L["휴대전화"]<span class="small-text hint-text">@L["- 제외한 숫자만 입력"]</span></label>
                    <input id="mobile-3" type="tel" class="form-control" disabled data-msg="@L["휴대전화를 입력하세요."]" value="@Model.Mobile">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 required">
                <div id="fg-pwd-3" class="form-group form-group-default required disabled">
                    <label>@L["비밀번호"]<span class="m-l-10 small-text hint-text">@L["영문과 숫자 또는 특수문자 조합 최소 10자 이상"]</span></label>
                    <input id="pwd-3" type="password" class="form-control" disabled data-msg="@L["비밀번호를 입력하세요."]" onkeyup="$.joinUtils.checkPassword(this.id);" />
                </div>
            </div>
            <div class="col-lg-6 required">
                <div id="fg-pwd2-3" class="form-group form-group-default required disabled">
                    <label>@L["비밀번호 확인"]</label>
                    <input id="pwd2-3" type="password" class="form-control" disabled data-msg="@L["비밀번호(확인)을 입력하세요."]" onkeyup="$.joinUtils.checkPassword(this.id);" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 required">
                <div id="fg-company-tel-3" class="form-group form-group-default required disabled">
                    <label>@L["직장 전화번호"]<span class="small-text hint-text">@L["- 제외한 숫자만 입력"]</span></label>
                    <input id="company-tel-3" type="tel" class="form-control" disabled data-msg="@L["휴대전화를 입력하세요."]" value="@Model.CompanyTel">
                </div>
            </div>
            <div class="col-lg-6">
                <div id="root-company-business-card-3" class="form-group form-group-default input-group">
                    <div id="fg-company-business-card-3" class="form-input-group required disabled">
                        <label>@L["담당자 명함 업로드"]<span class="m-l-10 small-text hint-text">@L["JPG 또는 PNG 포맷 이미지 파일 또는 PDF 파일"]</span></label>
                        <input id="company-business-card-3" type="text" class="form-control" data-msg="@L["담당자 명함 파일을 선택하세요."]" value="@Model.CompanyBusinessCard" readonly style="color: #495057;" />
                        <input type="file" name="company-business-card-file-3" id="company-business-card-file-3" class="form-control custom-file-input" onchange="$.joinUtils.handleFile(this.files, 'company-business-card-3');" />
                    </div>
                    <div class="input-group-append inputgroup-w">
                        <span onclick="modalDocumentFile('company-business-card-file-3'); return false;" class="input-group-text primary fw-500" style="cursor: pointer;">@L["파일 선택"]</span>
                    </div>
                </div>
                @*<p class="hint-text">
                    <i class="far fa-exclamation-triangle fa-fw fs-14"></i> @L["담당자 명함 사본"] <span class="text-primary">(@L["검수 후 모든 서비스 이용 가능"])</span>
                </p>*@
            </div>
        </div>
        <div class="row m-b-10 m-t-10" style="right: 0px; left: 0px;">
            <i class="far fa-arrow-circle-right fa-fw fs-14"></i> @L["법인 정보"]
        </div>
        <div class="row">
            <div class="col-lg-6 required">
                <div id="fg-company-name-3" class="form-group form-group-default required disabled">
                    <label>@L["법인명"]</label>
                    <input id="company-name-3" type="text" class="form-control" disabled data-msg="@L["법인명을 입력하세요."]" value="@Model.CompanyName" />
                </div>
            </div>
            <div class="col-lg-6 required">
                <div id="fg-company-president-3" class="form-group form-group-default required disabled">
                    <label>@L["대표자명"]</label>
                    <input id="company-president-3" type="text" class="form-control" disabled data-msg="@L["대표자명을 입력하세요."]" value="@Model.CompanyPresident" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 required">
                <div id="fg-company-rep-tel-3" class="form-group form-group-default required disabled">
                    <label>@L["대표번호"]<span class="m-l-10 small-text hint-text">@L["- 제외한 숫자만 입력"]</span></label>
                    <input id="company-rep-tel-3" type="tel" class="form-control" disabled data-msg="@L["대표번호를 입력하세요."]" value="@Model.CompanyRepTel" />
                </div>
            </div>
            <div class="col-lg-6 required">
                <div id="fg-company-reg-no-3" class="form-group form-group-default required disabled">
                    <label>@L["사업자등록번호"]<span class="m-l-10 small-text hint-text">e.g. 123-456-1234567</span></label>
                    <input id="company-reg-no-3" type="text" class="form-control" disabled data-msg="@L["사업자등록번호를 입력하세요."]" value="@Model.CompanyRegNo" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div id="root-company-reg-doc-3" class="form-group form-group-default input-group">
                    <div id="fg-company-reg-doc-3" class="form-input-group required disabled">
                        <label>@L["사업자 등록증 업로드"]<span class="m-l-10 small-text hint-text">@L["JPG 또는 PNG 포맷 이미지 파일 또는 PDF 파일"]</span></label>
                        <input id="company-reg-doc-3" type="text" class="form-control" data-msg="@L["사업자 등록증 파일을 선택하세요."]" value="@Model.CompanyRegDoc" readonly style="color: #495057;" />
                        <input type="file" name="company-reg-doc-file-3" id="company-reg-doc-file-3" class="form-control custom-file-input" onchange="$.joinUtils.handleFile(this.files, 'company-reg-doc-3');" />
                    </div>
                    <div class="input-group-append inputgroup-w">
                        <span onclick="modalDocumentFile('company-reg-doc-file-3'); return false;" class="input-group-text primary fw-500" style="cursor: pointer;">@L["파일 선택"]</span>
                    </div>
                </div>
                <p class="hint-text">
                    <i class="far fa-exclamation-triangle fa-fw fs-14"></i> @L["사업자 등록증 사본"] <span class="text-primary">(@L["검수 후 모든 서비스 이용 가능"])</span>
                </p>
            </div>
            <div class="col-lg-6"></div>
        </div>
        <div class="row m-b-10 m-t-10" style="right: 0px; left: 0px;">
            <i class="far fa-arrow-circle-right fa-fw fs-14"></i> @L["주소"] &nbsp;<span class="small-text hint-text">@L["기본 배송지로 설정되며, 배송지 주소는 회원 가입 후 My Page에서 수정 가능합니다."]</span>
        </div>
        <div class="row">
            <div class="col-lg-6 required">
                <div id="fg-zipcode-3" class="form-group form-group-default required disabled">
                    <label>@L["우편번호"]</label>
                    <input id="zipcode-3" type="text" class="form-control" disabled data-msg="@L["우편번호를 입력하세요."]" value="@Model.ZipCode" style="color: #495057;">
                </div>
            </div>
            <div class="col-lg-3">
                <div class="border-0 p-l-0 form-group form-group-default">
                    <button type="button" class="btn btn-cta btn-block btn-secondary fs-14" onclick="$.joinUtils.showZipCodeLayer('address-wrap-3', 'zipcode-3', 'address-3', 'address2-3');">
                        <span><i class="far fa-search fa-fw m-r-5"></i> @L["주소 검색"]</span>
                    </button>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 required">
                <div id="fg-address-3" class="form-group form-group-default required disabled">
                    <label>@L["주소"]</label>
                    <input id="address-3" type="text" class="form-control" disabled data-msg="@L["주소를 입력하세요."]" value="@Model.Address" style="color: #495057;">
                </div>
            </div>
            <div class="col-lg-6 required">
                <div id="fg-address2-3" class="form-group form-group-default required disabled">
                    <label>@L["상세 주소"]</label>
                    <input id="address2-3" type="text" class="form-control" disabled data-msg="@L["상세 주소를 입력하세요."]" value="@Model.Address2">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6" id="address-wrap-3" style="display: none; max-height: 350px;">
                <div class="m-b-15">
                    <img src="//t1.daumcdn.net/postcode/resource/images/close.png" id="btnFoldWrap" style="cursor:pointer;position:absolute;right:0px;top:-1px;z-index:1" onclick="$.joinUtils.hideZipCodeLayer()" alt="접기 버튼">
                </div>
            </div>
        </div>
    </div>
</div>