@using Microsoft.AspNetCore.Mvc.Localization
@inject KA.Web.Public.Services.CommonService CommonService
@inject IViewLocalizer L
@{
    var verifyRequestExistYn = ViewBag.VerifyReqeustExistYn as string ?? string.Empty;
}

<div class="modal-show-popup" id="modal-document-evidence">
    <div id="modal-document-evidence-box">
        <div style="padding: 30px 30px; background-color: #fff; width: 450px; box-sizing: border-box;">
            <img src="/img/icons/popup-close@1x.png" alt="Close" srcset="/img/icons/popup-close@1x.png 1x,/img/icons/popup-close@2x.png 2x,/img/icons/popup-close@3x.png 3x" class="modal-evidence-close">
            <h5 style="color: #000000; font-size:20px; font-weight:600; line-height: 1.4em;margin-bottom:10px; text-align:center; word-break: keep-all;">@L["‘고유식별 정보’를 가려주세요"]</h5>
            <p style="color: #666666; line-height: 1.4em; font-size: 14px; text-align: center;">@L["고유식별 정보가 가려지지 않은 증빙서류는<br/> 반려될 수 있으니 유의하시기 바랍니다."]</p>
            <div class="masking-cnt">
                <div class="masking-tapbtn">
                    <ul>
                        <li class="active tab-domestic" data-country="Domestic"><a href="#">@L["내국인의 경우"]</a></li>
                        <li class="tab-international" data-country="International"><a href="#">@L["외국인의 경우"]</a></li>
                    </ul>
                </div>
                <div class="masking-desc">
                    <div id="Domestic" class="active">
                        <div class="masking-desc-01">
                            <div>
                                <img alt="" src="/img/identy/Identification@1x.jpg"/>
                                <p>@L["주민등록번호 뒷자리"]</p>
                            </div>
                            <div>
                                <img alt="" src="/img/identy/driver-licence@1x.jpg"/>
                                <p>@L["운전면허번호 및<br/>주민등록번호 뒷자리"]</p>
                            </div>
                        </div>
                    </div>
                    <div id="International">
                        <div class="masking-desc-02">
                            <img alt="" src="/img/identy/passport@1x.jpg"/>
                            <p>@L["여권번호 및 성별, 국가 등 정보"]</p>
                        </div>
                    </div>
                </div>
                <p>
                    @L["신분증 촬영 시 안내된 부분을 <span>가리고 찍거나,</span><br/>이미 촬영한 경우 <span>불필요한 정보를 가려주세요.</span>"]
                    <br />
                    @L["고유 식별 정보’ 및 ‘수집 미동의 정보’가 가려지지 않은 <br /> 증빙서류는 반려될 수 있으니 유의하시기 바랍니다."]
                </p>
            </div>
            <div class="document-evidence-btn" style="display: flex; align-items: center; justify-content: center; margin-top: 10px;">
                <a href="#" id="modal-show-popup-btn" style="width: 150px; background-color: #000; color: #fff; height: 40px;text-align:center; line-height: 40px;">@L["확인"]</a>
            </div>
        </div>
    </div>
</div>

<script>
    var isKor = "@CommonService.IsKor()";
    var verifyRequestExistYn = "@verifyRequestExistYn";

    const $modal = document.querySelector('#modal-document-evidence');
    const $modalBox = $modal.querySelector('#modal-document-evidence-box');
    $modal.addEventListener('click', (e) => {
       if ($modal.classList.contains('block') 
        && (e.target === $modal || e.target === $modal.firstElementChild)) {
           document.querySelector('body').classList.remove('yhidden');
           $modal.classList.remove('block');
           document.querySelector('.modal-bg').classList.remove('block');
       }
    });
</script>